= form_for(@art) do |f|
  - if @art.errors.any?
    #error_explanation
      %h2
        = pluralize(@art.errors.count, "error")
        prohibited this art from being saved:
      %ul
        - @art.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit