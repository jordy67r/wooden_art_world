= form_for(@furniture) do |f|
  - if @furniture.errors.any?
    #error_explanation
      %h2
        = pluralize(@furniture.errors.count, "error")
        prohibited this furniture from being saved:
      %ul
        - @furniture.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit