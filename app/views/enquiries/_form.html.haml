= form_for(@enquiry) do |f|
  - if @enquiry.errors.any?
    #error_explanation
      %h2
        = pluralize(@enquiry.errors.count, "error")
        prohibited this enquiry from being saved:
      %ul
        - @enquiry.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :body, 'How can we help?'
    %br/
    = f.text_area :body
  .actions_button
    = f.submit'Submit'